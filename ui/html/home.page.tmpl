{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "body"}}
    <h2>Latest Snippets</h2>
    {{if .Snippets}}
    <table>
        <tr>
            <td>Title</td>
            <td>Created</td>
            <td>ID</td>
        </tr>
        {{range .Snippets}}
        <tr>
            <td>
                <a href="/snippet?id={{.ID}}">{{.Title}}</a>
            </td>
            <td>{{.Created}}</td>
            <td>#{{.ID}}</td>
        </tr>
        {{end}}
    </table>
    {{else}}
    <p>Nothing here yet!</p>
    {{end}}
{{end}}